<div id="item-list<%=comment.id%>">
<div class="row">
	<div class="col-md-2"><%=comment.dish.name %></div>
	<div class="col-md-10">
		<div class="row">
			<div class="col-md-12">
				tasted:<%=comment.tasted%>
				acid:<%=comment.acid%>
				sweet:<%=comment.sweet%>
				bitter:<%=comment.bitter%>
				spicy:<%=comment.spicy%>
				salt:<%=comment.salt%>
				<% if current_user.id==comment.user_id%>
				<%= link_to "edit",dish_comments_path(@dish,:id=>comment.id) %>
				<%= link_to "destroy",dish_comment_path(@dish,comment),:remote => true,:method=>'delete',:class=>"delete" %>
				<% end %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%=comment.comment%>
			</div>
		</div>
	</div>
</div>
</div>