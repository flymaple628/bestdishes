<div class="row">
	<div class="col-md-12">
		<%=@dish.name%>
		<%=link_to 'tasted',dish_comments_path(:order=>'tasted') %>
		<%=link_to 'acid',dish_comments_path(:order=>'acid') %>
		<%=link_to 'sweet',dish_comments_path(:order=>'sweet') %>
		<%=link_to 'bitter',dish_comments_path(:order=>'bitter') %>
		<%=link_to 'spicy',dish_comments_path(:order=>'spicy') %>
		<%=link_to 'salt',dish_comments_path(:order=>'salt') %>
	</div>
</div>
<% if user_signed_in? %>
<%=form_for @comment,:url=>dish_comments_path do |f|%>
<div class="row">
	<div class="col-md-12">
		tasted:<%=f.range_field :tasted ,in: 1..10%>
		acid:<%=f.range_field :acid,in: 1..10%>
		sweet:<%=f.range_field :sweet,in: 1..10%>
		bitter:<%=f.range_field :bitter,in: 1..10%>
		spicy:<%=f.range_field :spicy,in: 1..10%>
		salt:<%=f.range_field :salt,in: 1..10%>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%=f.text_area :comment%>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<%=f.submit :create%>
	</div>
</div>
<% end %>
<% end %>
<% if @comments.count>0 %>
<% @comments.each do |c|%>
<div class="row">
	<div class="col-md-2">頭像</div>
	<div class="col-md-10">
		<div class="row">
			<div class="col-md-12">
				tasted:<%=c.tasted%>
				acid:<%=c.acid%>
				sweet:<%=c.sweet%>
				bitter:<%=c.bitter%>
				spicy:<%=c.spicy%>
				salt:<%=c.salt%>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%=c.comment%>
			</div>
		</div>
	</div>
</div>
<% end %>
<% end %>
<div class="row">
	<div class="col-md-12 text-center"><%= paginate @comments %></div>
</div>