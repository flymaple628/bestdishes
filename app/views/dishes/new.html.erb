<%=form_for @dish,:url=>dishes_path do |f|%>
<div class="row">
	<div class="col-md-4"><%=f.label :name%></div>
	<div class="col-md-8"><%=f.text_field :name%></div>
</div>
<div class="row">
	<div class="col-md-4"><%=f.label :price%></div>
	<div class="col-md-8"><%=f.number_field :price%></div>
</div>
<div class="row">
	<div class="col-md-12"><%=f.label :short_des%></div>
</div>
<div class="row">
	<div class="col-md-12"><%=f.text_area :short_des%></div>
</div>
<div class="row">
	<div class="col-md-12"><%=f.submit :create%></div>
</div>

<% end %>