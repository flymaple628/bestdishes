	<% unless @dish.nil? %>
	<%=form_for @dish do |f|%>
	<div class="row">
		<div class="col-md-4"><%=f.label :name%></div>
		<div class="col-md-8"><%=f.text_field :name%></div>
	</div>
	<div class="row">
		<div class="col-md-4"><%=f.label :price%></div>
		<div class="col-md-8"><%=f.number_field :price%></div>
	</div>
	<div class="row">
		<div class="col-md-4"><%=f.label :status%></div>
		<div class="col-md-8">
			<%= f.select(:status) do %>
			  <% [['draft', 1], ['posted', 2]].each do |c| -%>
			    <%= content_tag(:option, c.first, value: c.last) %>
			  <% end %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4"><%=f.label :tag_id%></div>
		<div class="col-md-8">
			<%=f.collection_check_boxes(:tag_ids, Tag.all, :id, :name)%>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12"><%=f.label :short_des%></div>
	</div>
	<div class="row">
		<div class="col-md-12"><%=f.text_area :short_des%></div>
	</div>
	<div class="row">
		<div class="col-md-6"><%=f.submit :submit%></div>
	</div>

	<% end %>
	<% end %>

<!--form-->
<div class="row">
	<div class="col-md-8">resrtaurants_name</div>
	<div class="col-md-4">
		<%=link_to "name" , admin_dishes_path(:order=>:name)%>
		<%=link_to "price" , admin_dishes_path(:order=>:price)%>
		<%=link_to "viewed" , admin_dishes_path(:order=>:viewed)%>
		<%=link_to "comment" , admin_dishes_path(:order=>:comment_count)%>
		<%=link_to "last_commet" , admin_dishes_path(:order=>:comment_updated)%>
	</div>
</div>
<% @dishes.each do |f| %>
<div class="row">
	<div class="col-md-8"><%=link_to "#{f.name}" ,admin_dish_comments_path(f)%></div>
	<div class="col-md-4">
	$<%=f.price%>
	viewed:<%=f.viewed%>
	Count:<%=f.comment_count%>

	<%#=link_to 'faverite',admin_faverite_dishes_path(:dish_id=>f.id),:method=>'post' %>
	<%=link_to 'edit',admin_dishes_path(:id=>f.id) %>
	<%=link_to 'delete',admin_dish_path(:id=>f.id),:method=>'delete' %>
	</div>
</div>
<div class="row">
	<div class="col-md-12"><%=f.short_des%></div>
</div>
<% end %>
<div class="col-md-12 text-center"><%= paginate @dishes %></div>