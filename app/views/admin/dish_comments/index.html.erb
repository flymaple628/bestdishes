<div class="main">
	<div class="row">
		<div class="col-md-12">
			<h2><%=link_to 'restaurent',dishes_path() %></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12"><h1><%=@dish.name%></h1></div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<%=link_to 'tasted',dish_comments_path(:order=>'tasted') %>
			<%=link_to 'acid',dish_comments_path(:order=>'acid') %>
			<%=link_to 'sweet',dish_comments_path(:order=>'sweet') %>
			<%=link_to 'bitter',dish_comments_path(:order=>'bitter') %>
			<%=link_to 'spicy',dish_comments_path(:order=>'spicy') %>
			<%=link_to 'salt',dish_comments_path(:order=>'salt') %>
		</div>
	</div>
	<div class="main-comment">

		<div class="comment-list">
		<% if @comments.count>0 %>
		<% @comments.each do |c|%>
		<div class="row">
			<div class="col-md-2"><%=c.dish.name %></div>
			<div class="col-md-10">
				<div class="row">
					<div class="col-md-12">
						tasted:<%=c.tasted%>
						acid:<%=c.acid%>
						sweet:<%=c.sweet%>
						bitter:<%=c.bitter%>
						spicy:<%=c.spicy%>
						salt:<%=c.salt%>
						<%= link_to "destroy",dish_comment_path(@dish,c),:method=>'delete' %>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12">
						<%=c.comment%>
					</div>
				</div>
			</div>
		</div>
		<% end %>
		<% end %>
		</div><!--comment-list-->
		<div class="row">
			<div class="col-md-12 text-center"><%= paginate @comments %></div>
		</div>
	</div>
</div>